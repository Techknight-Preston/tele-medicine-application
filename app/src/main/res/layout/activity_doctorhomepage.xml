<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorHomePageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_arrow2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/back_arrow2"
            android:src="@drawable/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/search_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/searchicon2"
            android:src="@drawable/icon1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile3"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/profile3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/_profile3"
            android:src="@drawable/profile1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/menu_bar2"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/menu_bar2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/menu_bar2"
            android:src="@drawable/menu1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:queryHint="Search here..."
            android:iconifiedByDefault="false"
            app:layout_constraintTop_toBottomOf="@id/menu_bar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/upcoming_appointments"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@color/green"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/search_view_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_patient_records"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:gravity="center">

            <ImageView
                android:id="@+id/upcoming_appointment_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/upcomingappointmenticon"
                android:contentDescription="@string/upappointments"/>

            <TextView
                android:id="@+id/view_appointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewupcomingappointments"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_patient_records"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@color/silver"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/search_view_bar"
            app:layout_constraintStart_toEndOf="@+id/upcoming_appointments"
            app:layout_constraintEnd_toStartOf="@+id/Patients_requests"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/Patient_records"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/records2"
                android:contentDescription="@string/patientrecords"/>

            <TextView
                android:id="@+id/view_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewpatientrecords"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Patients_requests"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@color/red"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/search_view_bar"
            app:layout_constraintStart_toEndOf="@+id/view_patient_records"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/Patient_request_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/request2"
                android:contentDescription="@string/patientrequest"/>

            <TextView
                android:id="@+id/View_patients_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_patient_requests"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/cure_icon"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:contentDescription="@string/cure"
            android:src="@drawable/image20"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/upcoming_appointments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp" />

        <Button
            android:id="@+id/E_prescription"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:text="@string/e_prescription"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cure_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_dmenu"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>