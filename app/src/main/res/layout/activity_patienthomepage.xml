<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientHomePageActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/patient_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/back_icon"
            android:src="@drawable/back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/searchicon"
            android:src="@drawable/icon1"
            app:layout_constraintEnd_toStartOf="@+id/profile2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/profile"
            android:src="@drawable/profile1"
            app:layout_constraintEnd_toStartOf="@+id/menu_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/menu_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/menu"
            android:src="@drawable/menu1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="331dp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search here..."
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_icon" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/find_doctor_card"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginTop="50dp"
            android:background="@color/sky_blue"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/inquiry_card"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_bar">

            <ImageView
                android:id="@+id/doc_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/findadoctor"
                android:src="@drawable/docicon1" />

            <TextView
                android:id="@+id/find_doctor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/findadoctor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/inquiry_card"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginTop="50dp"
            android:background="@color/green"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/appointment_card"
            app:layout_constraintStart_toEndOf="@+id/find_doctor_card"
            app:layout_constraintTop_toBottomOf="@id/menu_bar">

            <ImageView
                android:id="@+id/inquiry_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/sendaninquiry"
                android:src="@drawable/inquiryicon1" />

            <TextView
                android:id="@+id/inquiry_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/sendaninquiry"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/appointment_card"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginTop="50dp"
            android:background="@color/gray"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inquiry_card"
            app:layout_constraintTop_toBottomOf="@id/menu_bar">

            <ImageView
                android:id="@+id/book_appointment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/bookappointment"
                android:src="@drawable/appointmenticon1" />

            <TextView
                android:id="@+id/appointment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/bookappointment"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/cure_icon"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/cure"
            android:src="@drawable/cureicon1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_doctor_card" />

        <Button
            android:id="@+id/Specialists"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:text="@string/_specialists"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cure_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_menu"
        app:headerLayout="@layout/drawer_header" >


    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
